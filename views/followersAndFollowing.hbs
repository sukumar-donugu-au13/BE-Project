<!DOCTYPE html>
<html lang="en">
<head>
    {{> head }}
    <link rel="stylesheet" href="/css/main.css">
    <title>{{ pageTitle }}</title>
</head>
<body class="body">
    <div class="wrapper">
        <div class="row">
            <nav class="col-2">
                <a class="blue" href="/"><i class="fab fa-meetup"></i></a>
                <a href="/"><i class="fas fa-home"></i></a>
                <a href="/search"><i class="fas fa-search"></i></a>
                <a href="/profile"><i class="fas fa-user"></i></a>
                <a href="/logout"><i class="fas fa-sign-out-alt"></i></a>
            </nav>

            <div class="mainSectionContainer col-10 col-md-8 col-lg-6">
                <div class="titleContainer">
                    <h1>{{ pageTitle }}</h1>
                </div>
                {{#unless profileUser }}
                    <span class="errorMessage">Check the url you are trying to access</span>
                {{/unless}}

                <script>
                    var userLoggedIn = {{{ userLoggedInJs }}}
                    var profileUserId = {{{ userId }}}
                    var selectedTab = {{{ selectedTab }}}
                </script>

                {{setVar "followersCount" profileUser.followers.length }}
                {{setVar "followingCount" profileUser.following.length }}
                
                <div class="tabsContainer">
                        <a href="/profile/{{ profileUser.username }}/following" class="tab">
                            <span>Following</span>
                        </a>

                        <a href="/profile/{{ profileUser.username }}/followers" class="tab">
                            <span>Followers</span>
                        </a>
                </div>

                <div class="resultsContainer"></div>
            </div>

            <div class="col-md-2 col-lg-4">
            </div>
        </div>
    </div>

    <script src="https://kit.fontawesome.com/928db4b75b.js" crossorigin="anonymous"></script>
    {{> footer }}

    <script src="/js/followersAndFollowing.js"></script>

    <script src="/js/common.js"></script>
</body>
</html>