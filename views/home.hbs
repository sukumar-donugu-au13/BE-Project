                    <h1>{{ pageTitle }}</h1>
                </div>
                {{> createPostForm }}
            </div>

            <div class="col-md-2 col-lg-4">
                <span>Third column</span>
            </div>
        </div>
    </div>

    <script src="https://kit.fontawesome.com/928db4b75b.js" crossorigin="anonymous"></script>
    {{> footer }}

    <script src="/js/common.js"></script>
